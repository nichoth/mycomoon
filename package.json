{
  "name": "mycomoon",
  "description": "A website",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ecstatic public",
    "build": "mkdir -p public && npm run copy && npm run build-js && npm run build-sass",
    "build-js": "browserify --debug src/index.js > public/bundle.js",
    "copy": "cp src/myco.webmanifest src/index.html src/icon.png public",
    "build-sass": "sass src/style/main.scss public/style.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/mycomoon.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/mycomoon/issues"
  },
  "homepage": "https://github.com/nichoth/mycomoon#readme",
  "devDependencies": {
    "browserify": "^17.0.0",
    "ecstatic": "^4.1.4",
    "sass": "^1.32.8"
  }
}
