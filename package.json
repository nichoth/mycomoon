{
  "name": "mycomoon",
  "description": "A website",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"npm run watch-sass\" \"netlify dev\"",
    "//start": "npm run build && concurrently --kill-others \"npx ecstatic public\" \"npm run watch-sass\"",
    "build": "mkdir -p public && npm run copy && node build.js && npm run build-sw && npm run build-js && npm run build-sass",
    "build-js": "browserify -t uglifyify --debug -p esmify src/index.js > public/bundle.js",
    "build-sw": "browserify -t uglifyify --debug src/sw.js > public/sw.js",
    "copy": "mkdir -p public/admin && cp src/admin/* public/admin && cp src/myco.webmanifest src/index.html src/icon.png src/*.otf src/*.png public && cp src/icons/* public",
    "build-sass": "sass src/style/main.scss public/style.css",
    "watch-sass": "sass --watch src/style/main.scss public/style.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/mycomoon.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/mycomoon/issues"
  },
  "homepage": "https://github.com/nichoth/mycomoon#readme",
  "devDependencies": {
    "browserify": "^17.0.0",
    "concurrently": "^6.0.0",
    "ecstatic": "^4.1.4",
    "esmify": "^2.1.1",
    "gray-matter": "^4.0.2",
    "hyperstream": "^1.2.2",
    "mkdirp": "^1.0.4",
    "netlify": "^6.1.20",
    "sass": "^1.32.8",
    "uglifyify": "^5.0.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "htm": "^3.0.4",
    "marked": "^2.0.3",
    "preact": "^10.5.13",
    "route-event": "^3.1.0",
    "ruta3": "^2.0.1",
    "square": "^10.0.0"
  }
}
